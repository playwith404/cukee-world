<%# Gumroad 스타일 네비게이션 - 검은 배경 %>
<nav class="nav-gumroad sticky top-0 z-50"
     data-controller="mobile-menu">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center h-20">
      <!-- Logo -->
      <%= link_to root_path, class: "flex items-center gap-3" do %>
        <span class="font-display font-bold text-2xl text-white">playwith404</span>
      <% end %>

      <!-- Desktop Menu -->
      <div class="hidden md:flex items-center gap-1">
        <%= link_to "About", about_path, class: "nav-link text-white hover:bg-char-lemon hover:text-black px-4 py-2" %>
        <%= link_to "Services", services_path, class: "nav-link text-white hover:bg-char-lemon hover:text-black px-4 py-2" %>
        <%= link_to "Pricing", pricing_path, class: "nav-link text-white hover:bg-char-lemon hover:text-black px-4 py-2" %>
        <%= link_to "Contact", contact_path, class: "nav-link text-white hover:bg-char-lemon hover:text-black px-4 py-2" %>
        <%= link_to "Console", console_login_path, class: "nav-link text-white hover:bg-char-lemon hover:text-black px-4 py-2" %>
        <%= link_to "서비스 바로가기", "https://middle.cloudkakao.store/auth/login",
            class: "btn-cta-gumroad ml-4", target: "_blank", rel: "noopener" %>
      </div>

      <!-- Mobile Menu Button -->
      <button class="md:hidden p-2 border-3 border-white rounded"
              data-action="click->mobile-menu#toggle"
              aria-label="메뉴 열기">
        <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                d="M4 6h16M4 12h16M4 18h16"/>
        </svg>
      </button>
    </div>
  </div>

  <!-- Mobile Menu -->
  <div class="hidden md:hidden border-t-3 border-white/20 bg-black"
       data-mobile-menu-target="menu">
    <div class="px-4 py-4 space-y-2">
      <%= link_to "About", about_path, class: "block py-3 px-4 font-bold text-white hover:bg-char-lemon hover:text-black rounded transition-all" %>
      <%= link_to "Services", services_path, class: "block py-3 px-4 font-bold text-white hover:bg-char-lemon hover:text-black rounded transition-all" %>
      <%= link_to "Pricing", pricing_path, class: "block py-3 px-4 font-bold text-white hover:bg-char-lemon hover:text-black rounded transition-all" %>
      <%= link_to "Contact", contact_path, class: "block py-3 px-4 font-bold text-white hover:bg-char-lemon hover:text-black rounded transition-all" %>
      <%= link_to "Console", console_login_path, class: "block py-3 px-4 font-bold text-white hover:bg-char-lemon hover:text-black rounded transition-all" %>
      <%= link_to "서비스 바로가기", "https://middle.cloudkakao.store/auth/login",
          class: "block py-3 px-4 font-bold bg-char-heart text-black text-center border-3 border-black rounded-full mt-4",
          target: "_blank", rel: "noopener" %>
    </div>
  </div>
</nav>
