<%# locals: (title:, value:, color: "char-lemon", icon: nil, subtitle: nil, trend: nil) %>
<div class="card-brutal bg-<%= color %>">
  <div class="flex items-center justify-between mb-2">
    <% if icon %>
      <span class="text-2xl"><%= icon %></span>
    <% end %>
    <span class="text-sm font-bold text-gray-700"><%= title %></span>
  </div>
  <p class="text-3xl font-bold font-display"><%= value %></p>
  <% if subtitle %>
    <p class="text-sm text-gray-600 mt-1"><%= subtitle %></p>
  <% end %>
  <% if trend %>
    <div class="mt-2 flex items-center gap-1 text-sm">
      <% if trend > 0 %>
        <span class="text-green-700">↑ <%= trend %>%</span>
      <% elsif trend < 0 %>
        <span class="text-red-700">↓ <%= trend.abs %>%</span>
      <% else %>
        <span class="text-gray-600">→ 0%</span>
      <% end %>
      <span class="text-gray-500">vs 지난 기간</span>
    </div>
  <% end %>
</div>
