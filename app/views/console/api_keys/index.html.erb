<% content_for(:title) { "API 키 - Console | playwith404" } %>

<div class="flex min-h-screen bg-gray-50">
  <%= render "console/shared/sidebar" %>

  <main class="flex-1 p-8">
    <!-- Header -->
    <div class="flex justify-between items-start mb-8">
      <div>
        <h1 class="heading-brutal text-3xl mb-2">API 키</h1>
        <p class="text-gray-600">API 키를 생성하고 관리하세요.</p>
      </div>
    </div>

    <!-- Flash Messages -->
    <% if flash[:notice] %>
      <div class="card-brutal bg-char-bean mb-6">
        <p class="font-bold"><%= flash[:notice] %></p>
      </div>
    <% end %>

    <% if flash[:alert] %>
      <div class="card-brutal bg-red-200 mb-6">
        <p class="font-bold text-red-800"><%= flash[:alert] %></p>
      </div>
    <% end %>

    <!-- New API Key Alert -->
    <% if flash[:new_api_key] %>
      <div class="card-brutal bg-char-lemon mb-6" data-controller="api-key">
        <div class="flex items-start gap-4">
          <span class="text-3xl">🔑</span>
          <div class="flex-1">
            <h3 class="font-bold text-lg mb-2">새 API 키가 생성되었습니다!</h3>
            <p class="text-sm text-gray-700 mb-3">이 키는 한 번만 표시됩니다. 안전한 곳에 저장하세요.</p>
            <div class="flex items-center gap-2">
              <code class="flex-1 bg-white px-4 py-2 border-4 border-black font-mono text-sm break-all"
                    data-api-key-target="key"><%= flash[:new_api_key] %></code>
              <button type="button"
                      class="btn-brutal"
                      data-api-key-target="copyButton"
                      data-action="click->api-key#copy">
                복사
              </button>
            </div>
          </div>
        </div>
      </div>
    <% end %>

    <!-- Create New Key Form -->
    <div class="card-brutal bg-white mb-8">
      <h3 class="font-bold text-xl mb-4">새 API 키 생성</h3>
      <%= form_with model: @new_api_key, url: console_api_keys_path, method: :post, local: true, class: "space-y-4" do |f| %>
        <div class="grid md:grid-cols-2 gap-4">
          <div>
            <%= f.label :name, "키 이름", class: "block font-bold mb-2" %>
            <%= f.text_field :name, class: "input-brutal", placeholder: "예: Production API Key", required: true %>
          </div>
          <div>
            <%= f.label :environment, "환경", class: "block font-bold mb-2" %>
            <%= f.select :environment,
                [["프로덕션", "production"], ["스테이징", "staging"], ["개발", "development"]],
                {}, class: "input-brutal" %>
          </div>
        </div>
        <div>
          <%= f.submit "API 키 생성", class: "btn-brutal cursor-pointer" %>
        </div>
      <% end %>
    </div>

    <!-- API Keys List -->
    <div class="card-brutal bg-white">
      <h3 class="font-bold text-xl mb-4">API 키 목록</h3>

      <% if @api_keys.any? %>
        <div class="space-y-4">
          <% @api_keys.each do |api_key| %>
            <div class="border-4 border-black p-4 <%= api_key.active? ? 'bg-white' : 'bg-gray-100' %>"
                 data-controller="api-key">
              <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-4">
                <div class="flex-1">
                  <div class="flex items-center gap-3 mb-2">
                    <h4 class="font-bold text-lg"><%= api_key.name %></h4>
                    <span class="px-2 py-1 text-xs font-bold border-2 border-black
                                 <%= case api_key.environment
                                     when 'production' then 'bg-char-heart'
                                     when 'staging' then 'bg-char-lemon'
                                     when 'development' then 'bg-char-ghost'
                                     end %>">
                      <%= api_key.environment_label %>
                    </span>
                    <span class="px-2 py-1 text-xs font-bold border-2 border-black
                                 <%= api_key.active? ? 'bg-char-bean' : 'bg-gray-300' %>">
                      <%= api_key.status_label %>
                    </span>
                  </div>
                  <code class="block bg-gray-100 px-3 py-2 border-2 border-black font-mono text-sm"
                        data-api-key-target="key"><%= api_key.masked_key %></code>
                  <div class="mt-2 text-sm text-gray-600">
                    생성일: <%= api_key.created_at.strftime("%Y.%m.%d %H:%M") %>
                    <% if api_key.last_used_at %>
                      · 마지막 사용: <%= time_ago_in_words(api_key.last_used_at) %> 전
                    <% end %>
                  </div>
                </div>
                <div class="flex gap-2">
                  <% if api_key.active? %>
                    <%= link_to "비활성화",
                        revoke_console_api_key_path(api_key),
                        method: :patch,
                        class: "btn-brutal-outline text-sm px-4 py-2",
                        data: {
                          turbo_method: :patch,
                          turbo_confirm: "이 API 키를 비활성화하시겠습니까?"
                        } %>
                  <% end %>
                  <%= link_to "삭제",
                      console_api_key_path(api_key),
                      method: :delete,
                      class: "bg-red-200 border-4 border-black px-4 py-2 font-bold text-sm hover:bg-red-300 transition-all",
                      data: {
                        turbo_method: :delete,
                        turbo_confirm: "이 API 키를 삭제하시겠습니까? 이 작업은 되돌릴 수 없습니다."
                      } %>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      <% else %>
        <div class="text-center py-12">
          <span class="text-6xl mb-4 block">🔑</span>
          <p class="text-gray-600">아직 생성된 API 키가 없습니다.</p>
          <p class="text-gray-500 text-sm mt-2">위 폼에서 새 API 키를 생성하세요.</p>
        </div>
      <% end %>
    </div>
  </main>
</div>
