<% content_for(:title) { "Dashboard - Console | playwith404" } %>

<div class="flex min-h-screen bg-gray-50">
  <!-- Sidebar -->
  <%= render "console/shared/sidebar" %>

  <!-- Main Content -->
  <main class="flex-1 p-8">
    <!-- Header -->
    <div class="mb-8">
      <h1 class="heading-brutal text-3xl mb-2">Dashboard</h1>
      <p class="text-gray-600">
        안녕하세요, <strong><%= @enterprise.name %></strong>님!
        오늘의 API 현황을 확인하세요.
      </p>
    </div>

    <!-- Flash Messages -->
    <% if flash[:notice] %>
      <div class="card-brutal bg-char-bean mb-6">
        <p class="font-bold"><%= flash[:notice] %></p>
      </div>
    <% end %>

    <!-- Quick Stats -->
    <div class="grid md:grid-cols-4 gap-6 mb-8">
      <%= render "console/shared/stats_card",
          title: "오늘 API 호출",
          value: number_with_delimiter(@daily_stats[:total_calls]),
          color: "char-lemon",
          icon: "📊" %>

      <%= render "console/shared/stats_card",
          title: "성공률",
          value: "#{100 - @daily_stats[:error_rate]}%",
          color: "char-bean",
          icon: "✓",
          subtitle: "#{@daily_stats[:successful]} 성공 / #{@daily_stats[:errors]} 실패" %>

      <%= render "console/shared/stats_card",
          title: "평균 응답시간",
          value: "#{@daily_stats[:avg_response_time]}ms",
          color: "char-ghost",
          icon: "⚡" %>

      <%= render "console/shared/stats_card",
          title: "활성 API 키",
          value: @api_keys_count,
          color: "char-heart",
          icon: "🔑" %>
    </div>

    <!-- Charts Section -->
    <div class="grid md:grid-cols-2 gap-8 mb-8">
      <!-- API Usage Chart -->
      <div class="card-brutal bg-white" data-controller="console-chart" data-console-chart-type-value="bar">
        <h3 class="font-bold text-xl mb-4">API 사용량 (24시간)</h3>
        <div class="aspect-[16/9] bg-char-ghost/20 border-4 border-black flex items-end justify-around gap-1 p-4"
             data-console-chart-target="canvas">
          <% 24.times do |i| %>
            <% calls = rand(10..100) %>
            <div class="bg-black w-full transition-all hover:bg-char-lemon"
                 style="height: <%= calls %>%"
                 title="<%= format('%02d:00', i) %>: <%= calls %> calls"></div>
          <% end %>
        </div>
        <p class="text-sm text-gray-500 mt-2 text-center">시간대별 API 호출 수</p>
      </div>

      <!-- Error Distribution -->
      <div class="card-brutal bg-white">
        <h3 class="font-bold text-xl mb-4">응답 코드 분포</h3>
        <div class="space-y-4">
          <% success_rate = @daily_stats[:total_calls].positive? ? (@daily_stats[:successful].to_f / @daily_stats[:total_calls] * 100).round(1) : 0 %>
          <% error_rate = 100 - success_rate %>

          <div>
            <div class="flex justify-between mb-1">
              <span class="font-bold text-green-700">2xx Success</span>
              <span><%= success_rate %>%</span>
            </div>
            <div class="h-4 bg-gray-200 border-2 border-black">
              <div class="h-full bg-char-bean" style="width: <%= success_rate %>%"></div>
            </div>
          </div>

          <div>
            <div class="flex justify-between mb-1">
              <span class="font-bold text-red-700">4xx/5xx Errors</span>
              <span><%= error_rate %>%</span>
            </div>
            <div class="h-4 bg-gray-200 border-2 border-black">
              <div class="h-full bg-red-400" style="width: <%= error_rate %>%"></div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Monthly Summary -->
    <div class="card-brutal bg-char-star mb-8">
      <h3 class="font-bold text-xl mb-4">이번 달 요약</h3>
      <div class="grid md:grid-cols-4 gap-6">
        <div>
          <p class="text-gray-600 mb-1">총 API 호출</p>
          <p class="text-3xl font-bold"><%= number_with_delimiter(@monthly_stats[:total_calls]) %></p>
        </div>
        <div>
          <p class="text-gray-600 mb-1">성공 호출</p>
          <p class="text-3xl font-bold text-green-700"><%= number_with_delimiter(@monthly_stats[:successful]) %></p>
        </div>
        <div>
          <p class="text-gray-600 mb-1">예상 비용</p>
          <p class="text-3xl font-bold">₩<%= number_with_delimiter((@monthly_stats[:total_cost] * 1000).round(0)) %></p>
        </div>
        <div>
          <p class="text-gray-600 mb-1">사용량</p>
          <div class="flex items-center gap-2">
            <div class="flex-1 h-6 bg-white border-4 border-black">
              <div class="h-full bg-char-lemon" style="width: <%= @enterprise.usage_percentage %>%"></div>
            </div>
            <span class="font-bold text-lg"><%= @enterprise.usage_percentage %>%</span>
          </div>
        </div>
      </div>
    </div>

    <!-- Top Endpoints & Recent Activity -->
    <div class="grid md:grid-cols-2 gap-8">
      <!-- Top Endpoints -->
      <div class="card-brutal bg-white">
        <h3 class="font-bold text-xl mb-4">인기 엔드포인트</h3>
        <div class="space-y-3">
          <% if @monthly_stats[:top_endpoints].any? %>
            <% @monthly_stats[:top_endpoints].each do |endpoint, count| %>
              <div class="flex justify-between items-center py-2 border-b-2 border-black/10 last:border-0">
                <code class="bg-black text-white px-2 py-1 text-sm rounded"><%= endpoint %></code>
                <span class="font-bold"><%= number_with_delimiter(count) %></span>
              </div>
            <% end %>
          <% else %>
            <p class="text-gray-500 text-center py-4">데이터가 없습니다</p>
          <% end %>
        </div>
      </div>

      <!-- Recent Activity -->
      <div class="card-brutal bg-white">
        <h3 class="font-bold text-xl mb-4">최근 활동</h3>
        <div class="space-y-2 max-h-80 overflow-y-auto">
          <% if @recent_activity.any? %>
            <% @recent_activity.each do |usage| %>
              <div class="flex items-center justify-between py-2 border-b border-gray-200 last:border-0">
                <div class="flex items-center gap-2">
                  <span class="<%= usage.success? ? 'text-green-600' : 'text-red-600' %> text-lg">
                    <%= usage.success? ? '✓' : '✗' %>
                  </span>
                  <code class="text-sm"><%= usage.endpoint.truncate(25) %></code>
                </div>
                <div class="text-right">
                  <span class="text-sm font-mono <%= usage.success? ? 'text-green-700' : 'text-red-700' %>">
                    <%= usage.response_code %>
                  </span>
                  <span class="text-xs text-gray-500 block">
                    <%= time_ago_in_words(usage.created_at) %> 전
                  </span>
                </div>
              </div>
            <% end %>
          <% else %>
            <p class="text-gray-500 text-center py-4">최근 활동이 없습니다</p>
          <% end %>
        </div>
      </div>
    </div>
  </main>
</div>
